<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff4fffd">

    <TextView
        android:layout_width="350px"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:text="Email"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="70px"
        android:textColor="#ff0c0b13" />"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textSize="60px" />



    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:id="@+id/emailtext"
        android:layout_weight="1"
        android:background="#ff32faff"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/passwordtext"
        android:layout_alignStart="@+id/passwordtext" />




    <TextView
        android:layout_width="350px"
        android:layout_height="95px"
        android:textSize="65px"
        android:text="Password"
        android:id="@+id/textView2"

        android:textColor="#ff0a1325"
        android:textIsSelectable="false"

        android:layout_below="@+id/emailtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="#ff32faff"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordtext"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"

        android:autoText="true"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:text="LogIn"
        android:id="@+id/button"
        android:textColor="#ff352417"
        android:textSize="50px"
        android:background="#ff0cc2ff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/passwordtext"
        android:layout_alignStart="@+id/passwordtext"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


</RelativeLayout>
